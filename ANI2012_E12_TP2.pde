  }
  
  //Raccourci pour cliquer sur un bouton (ENTER)
  if (keyCode == ENTER) {
    clicBouton();
  }
  
  //Touche pour activer/inactiver la musique ('m')
  if (key == 'm')
    musiqueOn = !musiqueOn;
  
  //Touche pour réaliser une capture d'écran ('p')
  if (key == 'p') {
    save("captures/capture" + nf(idxCapture, 2) + ".png");
    idxCapture++;
  }
}

